{
  "name": "Full C + SDL2 Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "root",
  "workspaceMount": "source=${localWorkspaceFolder},target=/c-sdl2-game,type=bind",
  "workspaceFolder": "/c-sdl2-game",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}
